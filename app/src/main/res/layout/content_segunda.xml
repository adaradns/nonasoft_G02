<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.SegundaActivity"
    tools:showIn="@layout/app_bar_segunda"
    android:orientation="vertical"
    android:background="#E6E6E6">

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@android:color/white">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TabWidget
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@android:id/tabs" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@android:id/tabcontent">

                <LinearLayout
                    android:id="@+id/inicial"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ExpandableListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/expandableListView1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/intermedio"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ExpandableListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/expandableListView2"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/avanzado"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ExpandableListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/expandableListView3"/>
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </TabHost>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.78"
        android:orientation="vertical"
        android:weightSum="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="@string/desafio"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView"
            android:gravity="center_horizontal"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="119dp"
            android:layout_height="138dp"
            android:id="@+id/imageView2"
            android:background="@drawable/logo"
            android:layout_gravity="center_horizontal"
            android:contentDescription="" />

    </LinearLayout>

    <Button
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textStyle="bold"
        android:text="@string/jugar"
        android:textColor="#ffffff"
        android:id="@+id/button2"
        android:focusableInTouchMode="false"
        android:gravity="center_horizontal"
        android:background="@drawable/pressed_button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="5dp" />


</LinearLayout>

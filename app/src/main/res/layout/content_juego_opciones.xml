<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgrey"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="332dp"
        android:layout_height="154dp"
        android:background="@drawable/abc_cab_background_internal_bg"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_weight="0.20">

        <TextView
            android:id="@+id/txtPregunta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18dp"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="10dp" />
        <ImageView
            android:id="@+id/imgCorrecto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/correcto"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:visibility="gone"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="341dp"
        android:layout_height="256dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">


        <Button
            android:id="@+id/btnFacebook"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/fuccia"
            android:text="Facebook"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:contextClickable="false"
            android:padding="20dp" />

        <Button
            android:id="@+id/btnTwitter"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/purpure"
            android:text="Twitter"
            android:layout_below="@+id/btnFacebook"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="20dp" />

        <Button
            android:id="@+id/btnWhatsapp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/purpure2"
            android:text="Whatsapp"
            android:padding="20dp"
            android:layout_above="@+id/btnInstagram"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnInstagram"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/clearpurpure"
            android:text="Instagram"
            android:padding="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="26dp" />
    </RelativeLayout>

</LinearLayout>